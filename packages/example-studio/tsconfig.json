{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@sanity-typed/tsconfig/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@portabletext-typed/*": ["../*/src"],
      "@portabletext-typed/types": ["../pt-types/src"],
      "@sanity-typed/*": ["../*/src"]
    }
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "../../@types/**/*.d.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
