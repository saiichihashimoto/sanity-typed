{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsup.config.ts"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "**",
        "!.next/**",
        "!.sanity/**",
        "!.turbo/**",
        "!**/*.md",
        "!dist/**",
        "!node_modules/**",
        "!src/**/*.test.*"
      ],
      "outputs": ["dist/**"]
    },
    "dev": {
      "persistent": true
    }
  }
}
