{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsup.config.ts"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "!.*/**",
        "!*/**/*.md",
        "!dist/**",
        "!node_modules/**",
        "!src/**/*.test.*",
        "**"
      ],
      "outputs": ["dist/**", ".next/**"],
      "outputLogs": "new-only"
    },
    "dev": {
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"],
      "outputLogs": "new-only"
    }
  }
}
