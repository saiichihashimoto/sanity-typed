{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsup.config.ts"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!LICENSE",
        "!jest.config.ts",
        "!.*/**",
        "!**/*.md",
        "!src/**/*.test.*"
      ],
      "outputLogs": "new-only",
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": { "persistent": true },
    "for-test-to-depend-but-not-run": {
      "dependsOn": ["^for-test-to-depend-but-not-run"],
      "inputs": ["$TURBO_DEFAULT$", "!LICENSE", "!.*/**", "!**/*.md"]
    },
    "test": {
      "dependsOn": ["for-test-to-depend-but-not-run"],
      "inputs": ["$TURBO_DEFAULT$", "!LICENSE", "!.*/**", "!**/*.md"],
      "outputLogs": "new-only"
    }
  }
}
